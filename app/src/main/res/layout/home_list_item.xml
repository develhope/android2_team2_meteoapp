<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="24dp"
    android:layout_width="match_parent"
    android:layout_height="155dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/frame_shape">

    <TextView
        android:id="@+id/rc_tv_today"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rc_tv_tomorrow"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/rc_tv_grade_min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rc_tv_grade_min_tom"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginStart="152dp"
        android:layout_marginTop="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/rc_tv_grade_max"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rc_tv_grade_max_tom"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginStart="254dp"
        android:layout_marginTop="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/rc_tv_precipitation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rc_tv_precip_num_tom"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginStart="152dp"
        android:layout_marginTop="88dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/rc_tv_speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rc_tv_kmh_tom"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginStart="254dp"
        android:layout_marginTop="88dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/rc_tv_min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rc_tv_min_tom"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:layout_marginStart="152dp"
        android:layout_marginTop="46dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/rc_tv_max"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rc_tv_max_tom"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:layout_marginStart="254dp"
        android:layout_marginTop="46dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/rc_tv_precipitation_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rc_tv_precip_tom"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:layout_marginStart="152dp"
        android:layout_marginTop="116dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/rc_tv_wind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rc_tv_wind_tom"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:layout_marginStart="256dp"
        android:layout_marginTop="117dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/rc_tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rc_tv_date_tom"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/rc_cloudy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_sun"
        android:layout_marginStart="18dp"
        android:layout_marginTop="86dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>